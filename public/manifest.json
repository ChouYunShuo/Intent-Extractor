{
    "manifest_version": 2,
    "name": "Virtual Assistant Chrome Automation Extension",
    "version": "1.0",
    "permissions": [
        "storage",
        "webNavigation",
        "tabs",
        "<all_urls>",
        "downloads"
        
    ],
    "browser_action": {
        "default_icon": "images/icon-ai.png",
        "default_title": "Task Automation",
        "default_popup": "popup.html"
    },
    "content_scripts":[{
        "matches":["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": [ "background.js"]
    },
    "icons": { 
        "16": "images/icon-ai_16.png",
        "48": "images/icon-ai_48.png",
       "128": "images/icon-ai_128.png" }
    
}

